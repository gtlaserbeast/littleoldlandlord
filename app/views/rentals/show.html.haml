.container
  - markers = "#{@rental.latitude}%2C#{@rental.longitude}&"
  - landlord_email = User.find(@rental.landlord_id).email
  .row
    .col-lg-8.col-lg-offset-2.centered
      .col-lg-4.centered
        %strong
          =@rental.address.upcase
        %p
          =@rental.description
        %br
        = "$#{'%.2f' % @rental.rent_price}"
        %br
        =mail_to landlord_email
      .col-lg-4.centered
        = image_tag "http://maps.google.com/maps/api/staticmap?size=300x200&sensor=false&markers=#{markers}"
  .row
    .col-lg-8.col-lg-offset-2.centered
      %em
        Repairs @ this property: 
      %br
      - @rental.repairs.each do |repair|
        - if current_user.try(:admin?)
          = link_to "Edit", edit_rental_repair_path(@rental, repair), :class=> "btn btn-info btn-xs"
          = link_to "Delete", rental_repair_path(@rental, repair), method: :delete, :class=>"btn btn-danger btn-xs"
        %em
          = repair.category
        |
        = repair.description
        |
        %strong
          = repair.state
        %br
  .row
    .col-lg-8.col-lg-offset-2.centered
      = link_to "Request a Repair", new_rental_repair_path(@rental.id), :class=>"btn btn-success btn-xs"