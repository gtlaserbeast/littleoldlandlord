.container
  .row
    .col-lg-8.col-lg-offset-2.centered
      %strong
        All Repairs New and Otherwise
      %br
  - @repairs.each do |repair|
    .row
      .col-lg-8.col-lg-offset-2.centered
        - if current_user.try(:admin?)
          = link_to "Edit", edit_rental_repair_path(repair.rental_id, repair), :class=> "btn btn-xs"
          = link_to "Delete", rental_repair_path(repair.rental_id, repair), method: :delete, :class=>"btn btn-xs"
        %em
          = repair.category
        |
        = repair.description
        |
        %strong 
          = repair.workflow_state
        |
        - if repair.workflow_state != "fixed"
          = link_to "Fix!", fix_rental_repair_path(repair.rental_id, repair), method: :put, :class=> "btn btn-xs"
          |
        - if ['new', 'delayed'].include?(repair.workflow_state)
          = link_to "Schedule!", schedule_rental_repair_path(repair.rental_id, repair), method: :put, :class=> "btn btn-xs"
          |
        - if repair.workflow_state == "scheduled"
          = link_to "Delay!", delay_rental_repair_path(repair.rental_id, repair), method: :put, :class=> "btn btn-xs"
          |